<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup">

    <TextView
        android:id="@+id/tvSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="370dp"
        android:onClick="onClickSignIn"
        android:text="Sign in"
        android:textColor="#A39F9F"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="370dp"
        android:onClick="onClickSignUp"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignin"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom"
        android:drawableStart="@drawable/ic_username"
        android:padding="10dp"
        android:text="Username"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom"
        android:drawableStart="@drawable/ic_password"
        android:drawableEnd="@drawable/ic_eye"
        android:padding="10dp"
        android:text="Password"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etNamaLengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom"
        android:drawableStart="@drawable/ic_namalengkap"
        android:padding="10dp"
        android:text="Nama Lengkap"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etNoTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNamaLengkap"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom"
        android:drawableStart="@drawable/ic_phone"
        android:padding="10dp"
        android:text="No. Hp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNoTelephone"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom"
        android:drawableStart="@drawable/ic_email"
        android:padding="10dp"
        android:text="Email"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btnSignUp"
        android:layout_width="127dp"
        android:layout_height="55dp"
        android:layout_below="@id/etEmail"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_signup"
        android:onClick="onClickBtn_SignUp"
        android:padding="20dp" />


</RelativeLayout>